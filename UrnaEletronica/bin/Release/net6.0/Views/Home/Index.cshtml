            mode: 'cors',
            body: {voto: voto }
        }
        console.log(voto)
        try {
            
            const resposta = await fetch("https://localhost:7004/api/Voto/Votacao/", {
                    method: 'POST',
                        mode: 'no-cors',
                    body: {voto: 12}})
            .then(function(response){
                if(response.ok){
                    $(".dadosCandidato").html("Fim")
                    return response.text()
